{{!< patientLayout}}

{{#with oneItem}}
<div class = "inputDataContainer">
    <div class ="symbol"> 
        <img id="glucose" src="/Exercise.png" align="center">
        <h2 id = "glucoselevel">STEPS </h2>
    </div>

    <div class ="inputDataItems"> 

        <form method="POST">
            <h2 id="bloodGlucoseLevel">Steps Count</h2>
            <input type="text" id="inputGlucoseLevel" placeholder="Enter data" name="data_entry"></input>
            <h2 id="bloodGlucoseNotes">Notes</h2>
            <input type="text" id="inputGlucoseNotes" placeholder="Comment" name="data_comment"></input>
            <input type="hidden" name="data_type" value="steps" /> 
            <input type="hidden" name="data_hex" value="#55B48B" /> 
            <input type="submit" id="doneButton" value="Done"></input> 
        </form>
        
    </div>
</div>
{{/with}}



