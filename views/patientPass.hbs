<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Lexend Deca' rel='stylesheet'>
    <title>Update Password</title>
    <link rel="stylesheet" href="/css/stylesSignIn.css">
    <script src="/javascript/menu.js" defer></script>
</head>



<body class="setPassword">

    <!-- Navigation bar at top of webpage -->
            <header>
                <nav class="nav_bar">
                    <a href="/about-dextrack"><img id="logo" src="/logo.png"></a>
                    <ul class="nav_pages">
                        <li class="nav_item"> 
                            <a href="/about-dextrack" class="nav_link">About DexTrack</a>
                        </li>
                        <li class="nav_item">
                            <a href="/about-diabetes" class="nav_link">About Diabetes</a>
                        </li>
                         <li class="nav_item">
                            <a href="/patient/dashboard" class="nav_link"><button>Dashboard</button></a>
                        </li>
                        <form action="/patient/logout" method="POST" id="form">
                            <li class="nav_item"><button >Sign Out</button> </li>
                        </form>
                    </ul>
                    <div class="menu">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div>
                </nav>
            </header>

    <main>
        <img src="/clouds-02.png" class="cloud-bg">
        <section class="sign-in">
        <h4>Set New Password</h4>
        <br><br>
            <div class="row">
                <div class="container">
                    <form action="/patient/change-password" method="POST">

                    <div class="col-50">
                        <div class="passwords">
                            <label for="passwords">Password</label>
                            <input type="password" placeholder="New Password" name="password" required/>
                        </div>
                    </div>
                    <input type="submit" value="Submit!" class="submit-btn">
                    </form>
                </div>
            </div>
        </section>
    </main> 
    <div class="alert">
    {{#each flash}}
        <div class="alertBox">
            <li>{{this.msg}}</li>
        </div>
    {{/each}}
</div>
</body>


 