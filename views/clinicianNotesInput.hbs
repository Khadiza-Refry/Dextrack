{{!< main}}

<!-- Navigation bar at top of webpage -->
<div class="navbar">
    <div class="dropdown">
        <button class="dropbtn">Dr. {{clinicianItem.first_name}} {{clinicianItem.last_name}} <img src="/chevron-down.png"></button>
        <div class="dropdown-content">
            <a href="/clinician/patientComments">Patient comments</a>
            <form action="/clinician/logout" method="POST">
                <button id="sign-out">Sign out</button>
            </form>
        </div>
    </div>
    <div class="icons">
        <a href="/clinician/dashboard"><img src="/house-solid.svg" id="icon" class="change-color"></a>
        <a onclick="toggleDark()"><img src="/circle-half-stroke-solid.svg" id="icon" class="change-color"></a>
        <a><img src="/Line.png" id="nav-line"></a>
        <a><img src="/circle-user-regular.svg" id="icon" class="change-color"></a>
    </div>
</div>


<ul class="breadcrumb">
  <li><a href="/clinician/dashboard">Patient list</a></li>
  <li><a href="/clinician/clinicianViewPatient">{{patientItem.first_name}} {{patientItem.last_name}}</a></li>
  <li><a href="/clinician/clinicianNotesPatient">Clinician Notes</a></li>
  <li>New Note</li>
</ul>

<div class="sections">
     <!-- Each section corresponds to each segment of the patient information in the webpage -->
    <section class="segment clinician-form" id="message">

        <span class="attribute">Day/date</span><br><strong>{{date.[0].value}}, {{date.[2].value}} {{date.[4].value}} {{date.[6].value}}</strong><br>
        <form action="/clinician/clinicianNotesPatientInput" name="form" method="POST">
            <textarea id="notes" type="text" name="note" placeholder="New note here." rows="5" required></textarea>
            <button class="orange-button" id="send" onclick="openPopup()">Save</button>
            <div class="popup-bg" id="popup-bg">
                <div class="popup" id="popup">
                    <img src="/tick.png">
                    <h3>Saved!</h3>
                    <p>Your note has been successfully saved.</p>
                    <button class="orange-button" id="ok-button" onclick="closePopup()">OK</button>
                </div>
            </div>        
        </form>
        
     </section>
</div>
