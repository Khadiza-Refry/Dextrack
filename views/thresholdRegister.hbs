<ul class="breadcrumb">
  <li><a href="#">Patient list</a></li>
  <li><a href="#">Ana Sergawa</a></li>
  <li>Set threshold</li>
</ul>

<div class="sections">

    <!-- Each section corresponds to each segment of the patient information in the webpage -->
    <section class="segment" id="threshold-form">
        <div class="threshold">
            <h4 id="glucose_text">Blood glucose level</h4>
            <div class="container" id="glucose">
                <div class="upper">
                    <label for="upper">Upper bound</label>
                    <input type="text" placeholder=" mol/L" name="upBlood"/>
                </div>
                <div class="lower">
                    <label for="lower">Lower bound</label>
                    <input type="text" placeholder=" mol/L" name="lowBlood"/>
                </div>
                <div class="required">
                    <label for="required"><span class="attribute">Set as required</span></label>
                    <input type="checkbox" placeholder="Set as required" name="required"/>
                </div>
            </div>
        </div>
        <div class="threshold">
            <h4 id="weight_text">Weight</h4>
            <div class="container" id="weight">
                <div class="upper">
                    <label for="upper">Upper bound</label>
                    <input type="text" placeholder=" kg" name="upWeight"/>
                </div>
                <div class="lower">
                    <label for="lower">Lower bound</label>
                    <input type="text" placeholder=" kg" name="lowWeight"/>
                </div>
                <div class="required">
                    <label for="required"><span class="attribute">Set as required</span></label>
                    <input type="checkbox" placeholder="Set as required" name="required"/>
                </div>
            </div>
        </div>
        <div class="threshold">
            <h4 id="insulin_text">Dose of insulin</h4>
            <div class="container" id="insulin">
                <div class="upper">
                    <label for="upper">Upper bound</label>
                    <input type="text" placeholder=" dose" name="upInsulin"/>
                </div>
                <div class="lower">
                    <label for="lower">Lower bound</label>
                    <input type="text" placeholder=" dose" name="lowInsulin"/>
                </div>
                <div class="required">
                    <label for="required"><span class="attribute">Set as required</span></label>
                    <input type="checkbox" placeholder="Set as required" name="required"/>
                </div>
            </div>
        </div>
        <div class="threshold">
            <h4 id="exercise_text">Exercise</h4>
            <div class="container" id="exercise">
                <div class="upper">
                    <label for="upper">Upper bound</label>
                    <input type="text" placeholder=" steps" name="upExercise"/>
                </div>
                <div class="lower">
                    <label for="lower">Lower bound</label>
                    <input type="text" placeholder=" steps" name="lowExercise"/>
                </div>
                <div class="required">
                    <label for="required"><span class="attribute">Set as required</span></label>
                    <input type="checkbox" placeholder="Set as required" name="required"/>
                </div>
            </div>
        </div>
        <button class="orange-button" onclick="openPopup()">Save</button>
        <div class="popup-bg" id="popup-bg">
            <div class="popup" id="popup">
                <img src="/tick.png">
                <h3>Saved!</h3>
                <p>New thresholds have been successfully saved.</p>
                <button class="orange-button" id="ok-button" onclick="closePopup()">OK</button>
            </div>
        </div>
    </section>
</div>
