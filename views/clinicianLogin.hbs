<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Lexend Deca' rel='stylesheet'>
    <title>Sign In</title>
    <link rel="stylesheet" href="/css/stylesSignIn.css">
    <script src="/javascript/menu.js" defer></script>
</head>
<body>
    <!-- Navigation bar at top of webpage -->
            <header>
                <nav class="nav_bar">
                    <a href="/about-dextrack"><img id="logo" src="/logo.png"></a>
                    <ul class="nav_pages">
                        <li class="nav_item"> 
                            <a href="/about-dextrack" class="nav_link">About DexTrack</a>
                        </li>
                        <li class="nav_item">
                            <a href="/about-diabetes" class="nav_link">About Diabetes</a>
                        </li>
                        <li class="nav_item">
                            <a href="/" class="nav_link"><button>Sign In</button></a>
                        </li>
                    </ul>
                    <div class="menu">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div>
                </nav>
            </header>
    <main>
        <img src="/clouds-02.png" class="cloud-bg">
        <section class="sign-in">
        <h4>Sign In</h4>
        <br><br>
            <div class="row">
                <div class="container">
                    <form action="/clinician/login" method="POST">

                    <div class="col-50">
                        <div class="email-user">
                            <label for="emailUser">Email</label>
                            <input id="username" name="username" type="email" required/>
                        </div>
                        <div class="passwords">
                            <label for="passwords">Password</label>
                            <input id="password" name="password" type="password" required/>
                        </div>
                    </div>
                    <button type="submit" value="submit" class="submit-btn">Log In </button>
                    </form>
                </div>
            </div>
        </section>
    </main> 
    <div class="alert">
    {{#each flash}}
        <div class="alertBox">
            <li>{{this}}</li>
        </div>
    {{/each}}
</div>
</body>


