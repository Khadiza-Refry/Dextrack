{{!< patientLayout}}
{{#each flash}}
<p class="alert">{{this.msg}}</p>
{{/each}}
{{! displays insulin submission page for a patient}}
{{#with patient}}
<div class = "inputDataContainer">
    <div class ="symbol"> 
        <img id="element" src="/Insulin.png">
        <h2 id = "title">INSULIN DOSE</h2>
    </div>

    <div class ="inputDataItems"> 

        <form method="POST">
            <h2 id="labelData">Insulin Doses</h2>
            <input type="text" id="inputData" placeholder="Enter insulin dose..." name="data_entry"></input>
            <h2 id="labelNotes">Notes</h2>
            <input type="text" id="inputNotes" placeholder="Enter comment..." name="data_comment"></input>
            <input type="hidden" name="data_type" value="insulin" /> 
            <input type="hidden" name="data_hex" value="#FF9D47" />  
            <input type="submit" id="doneButton" value="Click to Submit!"></input> 
        </form>
        
    </div>
</div>
{{/with}}




